{
  "database": {
    "rules": "database-security.json"
  },
  "hosting": [
    {
      "site": "v34l",
      "public": "src",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]}, 
    {
      "target": "V34L",
      "source": ".",
      "frameworksBackend": {}
    },{
      "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    }
    }  
  ]
  }
